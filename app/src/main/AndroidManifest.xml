<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kopotron.bafvideoplayer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecycleTest">
        <activity android:name=".AircraftContentActivity"></activity>
        <activity android:name=".VideoPlayer"></activity>
        <activity android:name=".MainActivity" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AircraftListActivity" />
        <activity android:name=".VideoListActivity" />
        <activity android:name=".ImageListActivity" />
        <activity android:name=".VideoPlayerPlayList" />
        <activity android:name=".ImagePlayerPlayList" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".ActivityChangePassword" />
    </application>

</manifest>